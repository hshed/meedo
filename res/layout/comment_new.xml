<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    tools:ignore="ContentDescription,HardcodedText,UselessParent" >

    <ImageView
        android:id="@+id/userImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="@android:color/transparent"
        android:paddingLeft="5dp"
        android:paddingRight="3dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:src="@drawable/anon" />

    <RelativeLayout
        android:id="@+id/commentContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_toRightOf="@+id/userImage"
        android:orientation="horizontal"
        android:paddingLeft="2dp"
        android:paddingRight="5dp"
        android:paddingBottom="5dp">

        <TextView
            android:id="@+id/userName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:padding="2dp"
            android:text="Hrishikesh Kumar"
            android:textStyle="bold"
            android:textColor="#565656"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/commentTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="2dp"
            android:padding="2dp"
            android:text="20 m"
            android:textColor="#c3c3c3"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/commentContent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/commentTime"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="2dp"
            android:padding="3dp"
            android:text="This is comments"
            android:textColor="#515555"
            android:textSize="14sp" />
    </RelativeLayout>
    <View 
        android:layout_below="@+id/commentContainer"
        android:layout_height="0.75dp"
        android:layout_width="match_parent"
        android:padding="2dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:background="#c2c2c2"/>

</RelativeLayout>