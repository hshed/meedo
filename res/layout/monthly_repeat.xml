<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:orientation="vertical" >

    <com.cw.msumit.views.MonthlyRepeatView
        android:id="@+id/monthlyRepeat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center" >
    </com.cw.msumit.views.MonthlyRepeatView>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="10dp"
        android:background="#d3d7da" />

    <LinearLayout
        android:id="@+id/okCancelGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp" >

        <TextView
            android:id="@+id/okrepeat"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableRight="@drawable/vertical_line"
            android:gravity="center_horizontal"
            android:text="OK"
            android:textColor="#2dbcd7"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/cancelMonthlyR"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Cancel"
            android:textColor="#2dbcd7"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>