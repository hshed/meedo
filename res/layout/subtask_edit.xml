<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/edit_subtaskLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/card"
    android:orientation="vertical"
    android:padding="10dp"
    tools:ignore="HardcodedText,ContentDescription" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/editSubtaskText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:padding="5dp"
            android:text="Edit Subtask"
            android:textColor="#2dbcd7"
            android:textSize="25sp" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:src="@drawable/tts" />
    </RelativeLayout>

    <EditText
        android:id="@+id/edit_subtask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:background="@android:color/transparent"
        android:gravity="top"
        android:imeOptions="actionDone"
        android:hint="Subtask here..."
        android:minLines="2" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#d3d7da" />

    <LinearLayout
        android:id="@+id/okCancelGroup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp" >

        <TextView
            android:id="@+id/doneEditSubtask"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableRight="@drawable/vertical_line"
            android:gravity="center_horizontal"
            android:text="DONE"
            android:textColor="#2dbcd7"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/cancelEditSubtask"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:text="Cancel"
            android:textColor="#2dbcd7"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>