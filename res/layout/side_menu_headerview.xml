<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/abs__ab_stacked_solid_dark_holo"
    android:padding="5dp"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/meedoUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center_vertical"
        android:drawableLeft="@drawable/anon"
        android:drawablePadding="8dp"
        android:text="Hrishikesh Kumar"
        android:textColor="#fff"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/meedoOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@android:color/transparent"
        android:src="@drawable/abs__ic_menu_moreoverflow_normal_holo_dark" />

</RelativeLayout>